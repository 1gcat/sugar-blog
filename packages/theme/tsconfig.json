{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "outDir": "./src",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "allowJs": true,
    "paths": {
      "@sugarat/theme/node": ["src/node.js"],
      "@sugarat/theme": ["src/index.ts"]
    }
  },
  "include": ["src", "types", "demo/.vitepress/theme","demo/.vitepress/config.ts"],
  "exclude": ["node_modules", "src/node.d.ts"]
}
